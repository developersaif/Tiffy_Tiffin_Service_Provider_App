<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="100dp"    android:orientation="horizontal"    android:padding="16dp">    <View        android:id="@+id/user_picture"        android:layout_width="80dp"        android:layout_height="80dp"        android:background="@color/colorShimmer"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintTop_toTopOf="parent" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="vertical">    <View        android:id="@+id/user_fullname"        android:layout_width="match_parent"        android:layout_height="10dp"        android:layout_marginStart="8dp"        android:layout_marginLeft="8dp"        android:layout_marginEnd="16dp"        android:layout_marginRight="16dp"        android:background="@color/colorShimmer"        app:layout_constraintEnd_toStartOf="@id/user_picture"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent" />    <View        android:id="@+id/email_address"        android:layout_width="match_parent"        android:layout_height="10dp"        android:layout_marginStart="8dp"        android:layout_marginLeft="8dp"        android:layout_marginTop="10dp"        android:layout_marginEnd="16dp"        android:layout_marginRight="16dp"        android:background="@color/colorShimmer"        app:layout_constraintEnd_toStartOf="@id/user_picture"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/user_fullname" />    <View        android:id="@+id/ip_address"        android:layout_width="match_parent"        android:layout_height="10dp"        android:layout_marginStart="8dp"        android:layout_marginLeft="8dp"        android:layout_marginTop="10dp"        android:layout_marginEnd="16dp"        android:layout_marginRight="16dp"        android:background="@color/colorShimmer"        app:layout_constraintEnd_toStartOf="@id/user_picture"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/email_address" />    <View        android:id="@+id/id"        android:layout_width="match_parent"        android:layout_height="10dp"        android:layout_marginStart="8dp"        android:layout_marginLeft="8dp"        android:layout_marginTop="10dp"        android:layout_marginEnd="16dp"        android:layout_marginRight="16dp"        android:background="@color/colorShimmer"        app:layout_constraintEnd_toStartOf="@id/user_picture"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/ip_address" />    </LinearLayout></LinearLayout>